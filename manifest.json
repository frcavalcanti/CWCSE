{
  "name": "Toolbox",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "home.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+C"
      }
    }
  },
  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
  ],
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "declarativeContent",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://*/*"
  ]
}
